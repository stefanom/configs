function install_conda {
    if [ ! -d "$HOME/.conda" ]; then
        mkdir "$HOME/.conda"
        wget "https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-$(uname -p).sh" -O "$HOME/.conda/miniconda.sh"
        bash "$HOME/.conda/miniconda.sh" -b -u -p "$HOME/.conda"
        rm -rf "$HOME/.conda/miniconda.sh"
    fi
}

function rig {
    if ! in_path conda ; then
        install_conda
    fi
    conda install -c conda-forge starship eza zoxide bat fzf jq
}

function install_rust {
    curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
}

function rig-extra {
    if ! in_path cargo ; then
        install_rust
    fi
    cargo install btm procs kondo fq
}
